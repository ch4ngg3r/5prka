<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="vstavka" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="400"/>
            <TextBox x:Name="input" HorizontalAlignment="Left" Height="23" Margin="10,220,0,0" VerticalAlignment="Top" Width="400"/>

            <Button Content="Добавить" HorizontalAlignment="Left" Margin="420,10,0,0" VerticalAlignment="Top" Width="75" Click="AddButton_Click"/>
            <Button Content="Удалить" HorizontalAlignment="Left" Margin="420,50,0,0" VerticalAlignment="Top" Width="75" Click="DeleteButton_Click"/>
            <Button Content="Изменить" HorizontalAlignment="Left" Margin="420,90,0,0" VerticalAlignment="Top" Width="75" Click="UpdateButton_Click"/>
    </Grid>
</Window>
